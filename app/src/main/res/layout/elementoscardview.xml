<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/card_imagen"
                android:layout_width="141dp"
                android:layout_height="141dp"
                android:src="@drawable/wf"/>
            <TextView
                android:id="@+id/card_price"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="#A6FF0000"
                android:textColor="@color/white"
                android:gravity="center_vertical|center_horizontal"
                android:text="$0.99"
                android:layout_gravity="right"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#188B67"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="WhatsFakePro (Ad free)"
                />
            <TextView
                android:id="@+id/card_desc"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="#AFBAB7"
                android:text="Create Fake chats!"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/card_sub_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#188B67"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="5.000+"/>
                <TextView
                    android:id="@+id/card_sub_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#188B67"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="4.3/5"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>